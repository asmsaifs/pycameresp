{
	"files.associations": {
		"typeinfo": "c",
		"modhomekit.h": "c",
		"algorithm": "c",
		"chrono": "c",
		"limits": "c",
		"ratio": "c",
		"__config": "c",
		"memory": "c",
		"complex": "c"
	},
	"C_Cpp.dimInactiveRegions": false,
	"editor.insertSpaces": false,
	"python.autoComplete.extraPaths": [
		"${workspaceFolder}/modules",
		"${workspaceFolder}/modules/lib",
		"${workspaceFolder}/modules/simul",
		"${workspaceFolder}/modules/lib/tools",
		"${workspaceFolder}/modules/lib/shell"
	],
	"pylint.args": [
	"--disable=bad-indentation",
	"--disable=unused-argument",
	"--disable=invalid-name",
	"--disable=import-outside-toplevel",
	"--disable=broad-except",
	"--disable=unused-variable",
	"--disable=line-too-long",
	"--disable=superfluous-parens",
	"--disable=unidiomatic-typecheck",
	"--disable=bare-except",
	"--disable=unused-wildcard-import",
	"--disable=wildcard-import",
	"--disable=global-statement",
	"--disable=eval-used",
	"--disable=exec-used"],
	"python.envFile": "${workspaceFolder}/.env",
	"workbench.colorCustomizations": {
		"editorWhitespace.foreground": "#EEEEEE"
	},
	"editor.minimap.enabled": false,
	"editor.renderWhitespace":"all",
	"editor.suggest.insertMode": "replace",
	"workbench.editor.enablePreview": false,
	"workbench.tree.indent": 10,
	"workbench.tree.renderIndentGuides": "always",
	"workbench.colorTheme": "Visual Studio Light - C++",
	"workbench.iconTheme": "vscode-icons",
	"extensions.ignoreRecommendations": true,
	"editor.autoClosingBrackets": "never",
	"editor.autoClosingQuotes": "never",
	"editor.quickSuggestions": {
		"other": "off"
	},
	"editor.snippetSuggestions": "none"
}